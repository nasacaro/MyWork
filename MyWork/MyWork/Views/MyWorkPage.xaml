                    <Rectangle Width="50" Height="50" Fill="Blue" RenderTransformOrigin="0.5,0.5"
                        ManipulationDelta="Rectangle_ManipulationDelta_3" ManipulationCompleted="Rectangle_ManipulationCompleted_3"
                           ManipulationMode="All">
