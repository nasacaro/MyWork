                    <Rectangle Width="50" Height="50" Fill="Blue" RenderTransformOrigin="0.5,0.5"
                        ManipulationDelta="Rectangle_ManipulationDelta_2" ManipulationCompleted="Rectangle_ManipulationCompleted_2"
                           ManipulationMode="All">
