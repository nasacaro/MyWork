                           ManipulationMode="All">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="dragTranslation3" X="{Binding PossitionX,Mode=TwoWay}" Y="{Binding PossitionY,Mode=TwoWay}"/>
